@using System.Data
@model DataSet
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <style>
        #banks {
            font-family: Arial, Helvetica, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

            #banks td, #banks th {
                border: 1px solid #ddd;
                padding: 8px;
            }

            #banks tr:nth-child(even) {
                background-color: #f2f2f2;
            }

            #banks tr:hover {
                background-color: #ddd;
            }

            #banks th {
                padding-top: 12px;
                padding-bottom: 12px;
                text-align: left;
                background-color: #50104A;
                color: white;
            }
    </style>
    <meta name="viewport" content="width=device-width" />

    <title>Approved Bank Daily Limits</title>
</head>
<body>
    <table id="banks" cellpadding="0" cellspacing="15">
        <tr>
            <th>Bank Name</th>
            <th>Rating</th>
            <th>Total Assets</th>
            <th>Calculated Daily Limit</th>
            <th>As Of Date</th>
        </tr>
        @foreach (DataRow row in Model.Tables[0].Rows)
        {
            <tr>
                <td>@row["BankName"]</td>
                <td>@row["Rating"]</td>
                <td>@row["TotalAssets"]</td>
                <td>@row["CalculatedDailyLimit"]</td>
                <td>@row["AsOfDate"]</td>
            </tr>
        }
    </table>
</body>
</html>